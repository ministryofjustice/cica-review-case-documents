{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["errors"],
    "properties": {
        "errors": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["status", "title", "detail"],
                "properties": {
                    "status": {
                        "const": 404
                    },
                    "title": {
                        "const": "404 Not Found"
                    },
                    "detail": {
                        "type": "string"
                    }
                }
            }
        }
    }
}
