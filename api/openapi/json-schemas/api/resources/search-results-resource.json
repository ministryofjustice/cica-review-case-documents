{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Metadata resource",
    "allOf": [
        { "$ref": "../json-api-base-resource.json" },
        {
            "properties": {
                "type": {
                    "const": "search-results"
                },
                "id": {
                    "$ref": "../../models/definitions/uuid-v4.json"
                },
                "attributes": {
                    "allOf": [
                        {
                            "required": ["query"],
                            "properties": {
                                "query": {
                                    "type": "string",
                                    "pattern": "^[a-zA-Z0-9 ]*$",
                                    "minLength": 2,
                                    "maxLength": 200
                                },
                                "results": {
                                    "type": "object"
                                }
                            }
                        }
                    ]
                }
            }
        }
    ]
}
