#!/usr/bin/env node

// IMPORTANT: This conditional import must remain first to load local development environment variables.
if (process.env.DEPLOY_ENV === 'local-dev') {
    // Dynamically import for local development only.
    // In deployed environments, this code will not run, avoiding the need for the file to exist.
    await import('../loadLocalEnv.js');
}

import http from 'node:http';
import { nanoid } from 'nanoid';


process.env.APP_BUILDTIME_ID = nanoid();
console.info(`Build-time ID generated: ${process.env.APP_BUILDTIME_ID}`);

import createApp from '../app.js';
import { checkOpenSearchHealth } from '../db/healthcheck.js';

const OPENSEARCH_URL = process.env.APP_DATABASE_URL || 'http://localhost:9200';

// normalize a port into a number, string, or false.
function normalizePort(port) {
    const parsedPort = parseInt(port, 10);
    if (Number.isNaN(parsedPort)) {
        // named pipe.
        return port;
    }

    if (parsedPort >= 0) {
        return parsedPort;
    }
    return false;
}

async function startServer() {
    const app = await createApp();
    const port = normalizePort(process.env.PORT || '5000');
    app.set('port', port);

    checkOpenSearchHealth(OPENSEARCH_URL)
        .then((isHealthy) => {
            if (!isHealthy) {
                console.error('OpenSearch is unhealthy. Exiting.');
                process.exit(1);
            }

            const server = http.createServer(app);
            server.listen(port, '0.0.0.0');
            server.on('error', (error) => {
                onError(error, port);
            });
            server.on('listening', () => {
                onListening(server);
            });
        })
        .catch((err) => {
            console.error({ err }, 'An error occurred during health check.');
            process.exit(1);
        });
}

function onError(error, port) {
    if (error.syscall !== 'listen') {
        throw error;
    }

    const bind = typeof port === 'string' ? `Pipe ${port}` : `Port ${port}`;

    // handle specific listen errors with friendly messages
    switch (error.code) {
        case 'EACCES':
            console.error(`${bind} requires elevated privileges`);
            process.exit(1);
            break;
        case 'EADDRINUSE':
            console.error(`${bind} is already in use`);
            process.exit(1);
            break;
        default:
            throw error;
    }
}

function onListening(server) {
    const serverAddress = server.address();
    const bind =
        typeof serverAddress === 'string' ? `pipe ${serverAddress}` : `port ${serverAddress.port}`;
    console.info(`Listening on ${bind}`);
}

startServer().catch((err) => {
    console.error('Failed to start server:', err);
    process.exit(1);
});
