{
    "name": "cica-review-case-documents",
    "version": "0.0.1",
    "engines": {
        "npm": ">=11.6.0",
        "node": ">=24.12.0"
    },
    "private": true,
    "type": "module",
    "license": "MIT",
    "scripts": {
        "openapi:build": "node ./api/openapi/buildOpenApiSpec.js",
        "openapi:watch": "nodemon --watch api/openapi/openapi.json --watch api/openapi/json-schemas --watch api/openapi/buildOpenApiSpec.js --exec \"npm run openapi:build\"",
        "dev:server": "cross-env DEPLOY_ENV=local-dev nodemon -L --inspect=0.0.0.0:9229 -e .css,.scss,.js,.json,.njk --ignore public/ --ignore src/js/scripts.babel.generated.js --ignore api/openapi/ npm start",
        "start:dev": "npm run dev:server",
        "start": "node ./bin/www",
        "prestart:dev": "npm run openapi:build",
        "sass": "sass --load-path=. --style=compressed --no-source-map src/sass/all.scss public/stylesheets/all.css",
        "build:dev": "npm run babel && npm run webpack:dev",
        "build": "npm run babel && npm run webpack",
        "webpack:dev": "webpack --config webpack.config.js",
        "webpack": "webpack --config webpack.config.prod.js",
        "babel": "babel src/js/scripts.js -o src/js/scripts.babel.generated.js",
        "test": "c8 node --env-file=.env.test --test --test-reporter=spec",
        "coverage:html": "c8 report --reporter=html",
        "lint": "biome check --write",
        "format": "biome format --write",
        "jsdoc:check": "eslint .",
        "prepare": "husky"
    },
    "dependencies": {
        "@ministryofjustice/frontend": "^8.0.1",
        "@apidevtools/json-schema-ref-parser": "^15.2.2",
        "@aws-sdk/client-s3": "^3.994.0",
        "@opensearch-project/opensearch": "^3.5.1",
        "ajv": "^8.18.0",
        "ajv-errors": "^3.0.0",
        "cookie-parser": "^1.4.7",
        "csrf-csrf": "^4.0.3",
        "dotenv": "^17.3.1",
        "express": "^5.1.0",
        "express-openapi-validator": "^5.6.2",
        "express-rate-limit": "^8.2.1",
        "express-session": "^1.19.0",
        "got": "^14.6.5",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.3",
        "lodash.merge": "^4.6.2",
        "nanoid": "^5.1.6",
        "nunjucks": "^3.2.4",
        "pino-http": "^11.0.0",
        "pino-pretty": "^13.1.3",
        "supertest": "^7.1.4",
        "swagger-ui-express": "^5.0.1",
        "uuid": "^13.0.0",
        "verror": "^1.10.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.28.6",
        "@babel/core": "^7.29.0",
        "@babel/plugin-transform-runtime": "^7.29.0",
        "@babel/preset-env": "^7.29.0",
        "@biomejs/biome": "2.4.3",
        "babel-loader": "^10.0.0",
        "c8": "^10.1.3",
        "concurrently": "^9.2.1",
        "core-js": "^3.48.0",
        "eslint-plugin-jsdoc": "^62.7.0",
        "cross-env": "^10.1.0",
        "husky": "^9.1.7",
        "nodemon": "^3.1.13",
        "sass": "^1.97.3",
        "webpack-cli": "^6.0.1"
    }
}
